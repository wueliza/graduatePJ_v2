<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    android:orientation="vertical"
    tools:context=".CheckIn2">

    <TextView
        android:id="@+id/title"
        android:text="CheckIn 病人辨識"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0ADDC9"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_24"/>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="202dp"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PatientNumber"
                android:layout_width="10dp"
                android:layout_height="45dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="總表病歷號 :"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PatientNumberBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wistNumber"
                android:layout_width="10dp"
                android:layout_height="45dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="手圈病歷號 :"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wistNumberBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ManCheck"
                android:layout_width="10dp"
                android:layout_height="45dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="確認員 :"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ManCheckBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#5769F0AE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="姓名 :"
                android:textColor="#504C4C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/NameBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/check_background"
                android:layout_marginRight="90dp"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Birthday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="生日 :"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/BirthdayBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/check_background"
                android:layout_marginRight="90dp"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_weight = "1"
            >

            <Button
                android:id="@+id/frontbt"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="上一步"
                android:textSize="16dp"
                android:background="#6646628A"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_weight = "1">
            <Button
                android:id="@+id/Upload"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:textSize="18dp"
                android:background="@drawable/nextbutton_general"
                android:text="傳送"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>